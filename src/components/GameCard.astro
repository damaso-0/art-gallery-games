---
interface Props {
    title: string
    url: string
    description: string
}

const { title, url, description } = Astro.props
---

<a
    href={url}
    class="w-full max-w-80 h-auto aspect-square flex flex-col gap-2 items-center border border-gray-800 p-4 rounded-lg transition-colors hover:bg-gray-950"
>
    <div class="w-full h-auto aspect-[1.5] bg-gray-900 rounded-md"></div>
    <h2 class="text-2xl font-bold text-white">{title}</h2>
    <p class="text-lg text-gray-400">{description}</p>
</a>
