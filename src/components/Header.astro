---
const links = [
    { name: 'Games', url: '/games' },
    { name: 'Artworks', url: '/artworks' },
]
---

<header
    class="w-full bg-[rgba(0,0,0,0.6)] backdrop-blur flex items-center justify-between gap-8 p-8 sticky top-0 left-0 right-0"
>
    <a
        href="/"
        class="cursor-pointer transition-all hover:drop-shadow-[0px_0px_10px_rgba(255,255,255,0.6)]"
    >
        <h1 class="text-2xl font-bold text-white">Art Gallery</h1>
    </a>

    <nav>
        <ul class="flex items-center gap-6 list-none">
            {
                links.map((link) => (
                    <li>
                        <a
                            href={link.url}
                            class="text-md text-white font-semibold hover:underline"
                        >
                            {link.name}
                        </a>
                    </li>
                ))
            }
        </ul>
    </nav>
</header>
