---
import GameCard from '../../components/GameCard.astro'
import Layout from '../../layouts/Layout.astro'

const games = [
    {
        title: 'Quiz',
        url: '/games/quiz',
        description: 'Test your knowledge of art',
    },
    {
        title: 'Game 2',
        url: '/games',
        description: 'Description 2',
    },
    {
        title: 'Game 3',
        url: '/games',
        description: 'Description 3',
    },
]
---

<Layout>
    <main class="w-full h-full bg-black p-8">
        <section class="w-full h-full grid grid-cols-3 gap-4">
            {games.map((game) => <GameCard {...game} />)}
        </section>
    </main>
</Layout>
